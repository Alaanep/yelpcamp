<%- include("../partials/header") %>
<div class='container'>
	<h1 style='text-align: center;'>Edit <%= campground.name %></h2>
	<div class='row'>
		<div style='width: 30%; margin: 30px auto;'>
			<form  action='/campgrounds/<%=campground._id%>?_method=PUT' method='POST'>
				<div class="form-group">
					<input class="form-control" type='text' id='name' value='<%=campground.name%>' name='campground[name]'>
				</div>
				<div class="form-group">
					<input class="form-control" id='description' type='text' value='<%=campground.description%>' name='campground[description]'>
				</div>
				<div class="form-group">
					<input class="form-control" id='image' type='text' value='<%=campground.image%>' name='campground[image]'>
				</div>
				<div class="form-group">
					<input class="form-control" id='image' type='number' value='<%=campground.price%>' name='campground[price]' min='0.01' step='0.01'>
				</div>
				<div class="form-group">
					<button class="btn btn-block btn-primary">EDIT CAMPGROUND! </button>
				</div>
			</form>
			<a href='/campgrounds'> View all campgrounds </a>
		</div>
	</div>
	
</div>
<%- include("../partials/footer") %>