<%- include("../partials/header") %>
<div class='container'>
	<h2 style='text-align: center;'>EDIT</h2>
	<div class='row'>
		<div style='width: 30%; margin: 30px auto;'>
			<form  action='/campgrounds/<%= campground_id %>/comments/<%=comment.id%>?_method=PUT' method='POST'>
				<div class="form-group">
					<input class="form-control" type='text' value='<%=comment.text %>' name='comment[text]'>
				</div>
				<div class="form-group">
					<button class="btn btn-block btn-primary">Submit! </button>
				</div>
			</form>
			<a href='/campgrounds'> View all campgrounds </a>
		</div>
	</div>
	
</div>
